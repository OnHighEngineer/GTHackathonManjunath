# Automated Insight Engine - Environment Configuration

# OpenAI API Key (for GPT-4o)
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini API Key (alternative)
GOOGLE_API_KEY=your_google_api_key_here

# Default LLM Provider: "openai" or "gemini"
LLM_PROVIDER=openai

# Database URL (optional - for SQL data sources)
DATABASE_URL=sqlite:///./data/insights.db

# Upload folder
UPLOAD_FOLDER=./uploads

# Output folder for generated reports
OUTPUT_FOLDER=./reports

# Server settings
HOST=0.0.0.0
PORT=8000
